                                <div class="CV-skill-wrap" id='skill-list'>
                                    <div class="skill-block">
                                        <div class="skill-text" contenteditable="true">Skill</div>
                                        <div class="delete-info fa fa-trash" onclick="deleteFromList(this)"></div>
                                    </div>
