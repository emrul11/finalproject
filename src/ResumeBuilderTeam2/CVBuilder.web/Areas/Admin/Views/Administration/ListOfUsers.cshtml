@using Crud.Persistance.Features.Membership;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ListOfUsers";
}

@section styles{
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
}
@if (Model.Any())
{

    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                <div class="card card-primary p-2 m-2">
                    <div class="card-header mb-2">
                        <h3 class="card-title">List Of Users</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- Table start -->
                    <table id="myTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FirstName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        <form method="post" asp-action="DeleteRole" asp-controller="Administration" asp-area="admin" asp-route-id="@user.Id">
                                            <a class="btn btn-info btn-sm" asp-area="admin" asp-controller="Administration" asp-action="ManageClaim" asp-route-id="@user.Id">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </a>

                                            <button type="submit" class="btn btn-danger btn-sm show-bs-modal">
                                                <i class="fas fa-trash">  </i>
                                                Delete
                                            </button>
                                        </form>

                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card -->
                <a class="btn btn-primary m-2 p-2" style="width:auto" asp-area="admin" asp-action="CreateRole"
                   asp-controller="administration">Add new role</a>
            </div>
            <!--/.col (left) -->


        </div>
        <!-- /.row -->
    </div>

    <!-- /.container-fluid -->
}

@section Scripts{
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>


}
