@model RoleEditModel
@{
    ViewData["Title"] = "EditRole";
}


<div class="container-fluid">
    <form role="form" asp-antiforgery="true" asp-action="EditRole"
          asp-area="Admin" asp-controller="Administration" method="post">
        <div class="row">

            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <!-- form start -->

                <div class="card card-primary p-2">
                    <div class="card-header">
                        <h3 class="card-title">Create Role</h3>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @* <div class="form-group">
                            <label asp-for="Id"></label>
                            <input class="form-control" asp-for="Id" disabled placeholder="Enter title">
                        </div> *@
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <input type="text" class="form-control" asp-for="RoleName" placeholder="Enter title">
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-area="admin" asp-controller="Administration" asp-action="ListOfRoles" class="btn btn-danger">Cancel</a>
                    </div>
                </div>

                

            </div>
            <!--/.col (left) -->
            <div class="col-md-6">
                <!-- /.Users in this role -->
                <div class="card card-primary p-2">
                    <div class="card-header">
                        <h3 class="card-title">Users in this role</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                                <br>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="Administration"
                           asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Add or Remove User</a>
                        @* <button type="submit" class="btn btn-primary">Add User</button>
                        <button type="submit" class="btn btn-danger">Remove User</button> *@
                    </div>

                </div>
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </form>
    <!-- /.form -->
</div><!-- /.container-fluid -->