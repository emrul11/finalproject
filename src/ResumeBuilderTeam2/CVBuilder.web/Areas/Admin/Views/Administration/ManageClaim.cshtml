@model ManageClaimModel
@{
    ViewData["Title"] = "ManageClaim";
}



<div class="container-fluid">
    <form role="form" asp-antiforgery="true" asp-action="EditRole"
          asp-area="Admin" asp-controller="Administration" method="post">
        <div class="row">

            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <!-- form start -->

                <div class="card card-primary p-2">
                    <div class="card-header">
                        <h3 class="card-title">Add Claim This Users</h3>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @* <div class="form-group">
                        <label asp-for="Id"></label>
                        <input class="form-control" asp-for="Id" disabled placeholder="Enter title">
                        </div> *@
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label" asp-for="FirstName"></label>
                            <div class="col-lg-9">
                                <input type="text" disabled class="form-control" asp-for="FirstName" placeholder="@Model.FirstName">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label" asp-for="Email"></label>
                            <div class="col-lg-9">
                                <input type="text" disabled class="form-control" asp-for="Email" placeholder="@Model.Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label" asp-for="Phone"></label>
                            <div class="col-lg-9">
                                <input type="text" disabled class="form-control" asp-for="Phone" placeholder="@Model.Phone">
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Administration"
                           asp-action="ListOfUsers">Cancel</a>

                    </div>
                </div>



            </div>
            <!--/.col (left) -->
            <div class="col-md-6">
                <!-- /.Users in this role -->
                <div class="card card-primary p-2">
                    <div class="card-header">
                        <h3 class="card-title">Users in this role</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (Model.Claims.Any())
                        {
                            foreach (var claim in Model.Claims)
                            {
                                <h5 class="card-title">@claim</h5>
                                <br>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Administration"
                           asp-action="AssignClaim" asp-route-userId="@Model.Id">Manage Claims</a>

                    </div>

                </div>
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </form>
    <!-- /.form -->
</div><!-- /.container-fluid -->