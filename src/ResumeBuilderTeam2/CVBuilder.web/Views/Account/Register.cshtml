@model RegisterModelVM
@{
    ViewData["Title"] = "Register Page";
}
@{
    Layout = "_Layout";
}

<main class="mt-5" id="main">
    <section id="about" class="about">
        <div class="loginbody">
            <div class="container">
                <div class="login-box">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="logo">
                                <span class="logo-font">CV </span>Builder
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <br>
                                <h3 class="header-title fs-5">REGISTER</h3>
                                <hr />
                                <form class="register-form" method="post" enctype="multipart/form-data" asp-area="" asp-controller="account" asp-antiforgery="true" asp-action="register" asp-route-ReturnUrl="@Model.ReturnUrl">
                                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <input asp-for="FirstName" class="form-control" placeholder="First Name">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mt-3 mt-md-0">
                                            <input asp-for="LastName" class="form-control" placeholder="Last Name">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <input asp-for="Email" class="form-control" placeholder="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mt-3 mt-md-0">
                                            <input asp-for="Phone" class="form-control" placeholder="Phone Number">
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group mt-3">
                                        <input asp-for="Address" class="form-control" placeholder="Address">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-3">
                                        <input asp-for="DateOfBirth" class="form-control"  placeholder="Birthdate m/d/y" id="birthdate">
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <input asp-for="Password" class="form-control" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mt-3 mt-md-0">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-8 mt-3">
                                        <label asp-for="ProfilePicture" class="form-label"></label>
                                    <div class="custom-file">
                                        <input class="form-control" asp-for="ProfilePicture" id="customFile"
                                               onchange="document.getElementById('PreviewPhoto').src=window.URL.createObjectURL(this.files[0])" />
                                        <label class="custom-file-label" for="customFi1e"></label>
                                        </div>                                   
                                    </div>
                                    <div class="form-group col-4">
                                        <img id="PreviewPhoto" class="rounded-circle" src="/images/ProfilePhoto/avatar.png" alt="Logo Image" ;
                                         width="125" height="125" style="border:1px ;margin-top:20px;" />
                                    </div>
                                    <div class="g-recaptcha" data-sitekey="6Lcmzm0oAAAAAKbdbPEX8pcoW1JTt1n9y7KKlex4"></div>
                                </div>
                                    <div class="form-group mt-3">
                                        <button class="btn btn-primary btn-block" type="submit">REGISTER</button>
                                    </div>
                                    <div class="form-group">
                                        <div class="text-center">Already have an account? <a asp-area="" asp-controller="account" asp-action="Login">Login Now</a></div>
                                    </div>
                                </form>
                                                     
                        </div>
                        <div class="col-sm-6 hide-on-mobile">
                            <div id="demo" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ul class="carousel-indicators">
                                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                                    <li data-target="#demo" data-slide-to="1"></li>
                                </ul>
                                <!-- The slideshow -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <div class="slider-feature-card">
                                            <img src="https://i.imgur.com/YMn8Xo1.png" alt="Feature 1">
                                            <h3 class="slider-title">Create a Professional CV</h3>
                                            <p class="slider-description">Craft a standout CV effortlessly using our user-friendly CV builder. Present your skills, experience, and achievements in a polished format.</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <div class="slider-feature-card">
                                            <img src="https://i.imgur.com/Yi5KXKM.png" alt="Feature 2">
                                            <h3 class="slider-title">Choose from Stunning Templates</h3>
                                            <p class="slider-description">Browse through a wide range of professionally designed templates tailored to various industries. Find the perfect look for your CV.</p>
                                        </div>
                                    </div>

                                </div>


                                <!-- Left and right controls -->
                                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#demo" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}